<h1>New Chydak</h1>

<%= render "form", chydak: @chydak %>

<%= form_with model: @chydak do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
      <% @chydak.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
      <% @chydak.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>