<h1>FormChydak</h1>

<%= form_for(chydak, as: chydak, url: chydak_path(chydak), html: { data: { turbo: false} } ) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
      <% chydak.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
      <% chydak.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], 
  selected: 'public' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>